<h1>Edit user</h1>
<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="errors_messages">
			<h2> Form is invalid </h2>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li> <%= message %> </li>
				<% end %>
			</ul>
		</div>
	<% end %>
  <div class="field">
    <%= f.label :email %>    
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>